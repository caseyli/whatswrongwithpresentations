<div class="loginform">
	<div class="roundedrectangleheader">
		<h1>Sign in</h1>
	</div>
	<div class='roundedrectanglebody'>
		<%= form_for(:session, :url => sessions_path) do |f| %>
		<div class="field">
			<%= f.label :email %>
			<br />
			<%= f.text_field :email, :autocapitalize => "off", :autocorrect => "off", :autocomplete=> "off"%>
		</div>
		<div class="field">
			<%= f.label :password %>
			<br />
			<%= f.password_field :password %>
		</div>
		<div class="actions">
			<%= f.submit "Log in" %>
		</div>
		<% end %>
		<p>
			New user? <%= link_to "Sign up now!", signup_path %>
		</p>
	</div>
</div>
