<h1>Lessons</h1>

<ul class='bodylist'>
<% @lessons.each do |lesson| %>
  <li>
    <%= link_to "LE-#{lesson.category}#{lesson.orderby}: #{lesson.title}", lesson %>
    <% if admin? %>
	    <%= link_to 'Edit', edit_lesson_path(lesson) %> | <%= link_to 'Destroy', lesson, :confirm => 'Are you sure?', :method => :delete %>
	<% end %>
  </li>
<% end %>
</ul>

<% if admin? %>
	<%= link_to 'New Lesson', new_lesson_path %>
<% end %>
